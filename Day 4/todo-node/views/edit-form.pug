html
  head
    title= "Update Todo"
    link(rel="stylesheet", href="/style.css", type="text/css")
  body
    //- - var todo = todo[0].todo
    //- - var description = todo[0].description
    div(class="container")
      h2= "Previous Task Name - "+todo[0].todo
      h3= "Previous Task Description - "+todo[0].description
      |
      - var id = todo[0]._id
      form(action="/todos/" + id +'/update', method="POST", class="todo-form")
        |
        input(type="hidden", name="_method", value="PUT")
        |
        input(type="text", name="todo", placeholder="Add Todo")
        |
        input(type="text", name="description", placeholder="Add Description")
        |
        input(type="submit", value="Add Todo" class="btn")


